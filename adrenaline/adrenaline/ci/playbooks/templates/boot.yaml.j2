---
PROVISION:
  digitalRebar:
    user: rocketskates
    password: r0cketsk8ts
    version: stable
  DHCP:
    subnet:
    - address: {{ priv_addr }}
      bind_host:
      - ip: {{ priv_ip_1 }}
        mac: {{ priv_mac_1 }}
      - ip: {{ priv_ip_2 }}
        mac: {{ priv_mac_2 }}
      - ip: {{ priv_ip_3 }}
        mac: {{ priv_mac_3 }}
      broadcast-address: {{ broadcast_addr }}
      default-lease: 7600
      dn: {{ domain_name }}
      dns: {{ dns_addr }}
      listen_iface: {{ listen_iface }}
      max-lease: {{ max_lease }}
      name: Managment_SUBNET
      netmask: {{ netmask }}
      range: {{ ip_range }}
      router: {{ router_ip }}
      type: management
  PROXY:
    ftp_proxy: ""
    http_proxy: "http://{{ proxy_host }}:{{ proxy_port }}"
    https_proxy: "https://{{ proxy_host }}:{{ proxy_port }}"
    ngcacher_proxy: "http://{{ build_priv_ip }}:{{ build_proxy_port }}"
  NODE_PROXY:
    http_proxy: "http://{{ build_priv_ip }}:{{ build_proxy_port }}"
    https_proxy: "http://{{ build_priv_ip }}:{{ build_proxy_port }}"
  PXE:
    # TODO - Determine exactly what this value does!
    password: "password"
    server_ip: {{ build_ip }}
    user: foo
  HYPERVISOR:
    host: {{ libvirt_host }}
    user: {{ libvirt_host_user }}
  STATIC:
    host:
     - access_ip: {{ priv_ip_1 }}
       name: {{ node_1_name }}
       interfaces:
       - address: {{ priv_ip_1 }}/{{ priv_ip_bits }}
         dn: ""
         dns: ""
         gateway: "0.0.0.0"
         iface: {{ priv_iface }}
         name: priv_intf
         netmask: {{ netmask }}
         type: tenant
       - address: {{ admin_ip_1 }}/{{ admin_ip_bits }}
         dn: ""
         dns: ""
         gateway: "0.0.0.0"
         iface: {{ admin_iface }}
         name: admin_intf
         netmask: {{ netmask }}
         type: tenant
       - address: {{ pub_ip_1 }}/{{ pub_ip_bits }}
         dn: ""
         dns: ""
         gateway: "0.0.0.0"
         iface: {{ pub_iface }}
         name: pub_intf
         netmask: {{ netmask }}
         type: data
     - access_ip: {{ priv_ip_2 }}
       name: {{ node_2_name }}
       interfaces:
       - address: {{ priv_ip_2 }}/{{ priv_ip_bits }}
         dn: ""
         dns: ""
         gateway: "0.0.0.0"
         iface: {{ priv_iface }}
         name: priv_intf
         netmask: {{ netmask }}
         type: tenant
       - address: {{ admin_ip_2 }}/{{ admin_ip_bits }}
         dn: ""
         dns: ""
         gateway: "0.0.0.0"
         iface: {{ admin_iface }}
         name: admin_intf
         netmask: {{ netmask }}
         type: tenant
       - address: {{ pub_ip_2 }}/{{ pub_ip_bits }}
         dn: ""
         dns: ""
         gateway: "0.0.0.0"
         iface: {{ pub_iface }}
         name: pub_intf
         netmask: {{ netmask }}
         type: data
     - access_ip: {{ priv_ip_3 }}
       name: {{ node_3_name }}
       interfaces:
       - address: {{ priv_ip_3 }}/{{ priv_ip_bits }}
         dn: ""
         dns: ""
         gateway: "0.0.0.0"
         iface: {{ priv_iface }}
         name: priv_intf
         netmask: {{ netmask }}
         type: tenant
       - address: {{ admin_ip_3 }}/{{ admin_ip_bits }}
         dn: ""
         dns: ""
         gateway: "0.0.0.0"
         iface: {{ admin_iface }}
         name: admin_intf
         netmask: {{ netmask }}
         type: tenant
       - address: {{ pub_ip_3 }}/{{ pub_ip_bits }}
         dn: ""
         dns: ""
         gateway: "0.0.0.0"
         iface: {{ pub_iface }}
         name: pub_intf
         netmask: {{ netmask }}
         type: data
  TFTP:
    pxe_server_configuration:
      ubuntu:
        boot_disk: vda
        password: {{ pxe_pass }}
        timezone: America/Denver
        user: ubuntu
        fullname: ubuntu_user
